    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <!-- SCRIPT PARA CONTROLAR LA INTRO -->
    <script>
        const introOverlay = document.getElementById('intro-overlay');
        const mainWrapper = document.getElementById('content-wrapper');
        const introVideo = document.getElementById('introVideo');
        // Solo reproducir intro la primera vez en esta sesión
        if (!sessionStorage.getItem('introShownThisSession')) {
            // Intro visible, contenido oculto (ya lo está desde CSS)
            introOverlay.style.display = 'block';
            introVideo.addEventListener('ended', function() {
                introOverlay.style.opacity = '0';
                introOverlay.style.transition = 'opacity 1s ease';
                setTimeout(() => {
                    introOverlay.style.display = 'none';
                    mainWrapper.style.opacity = '1 !important';
                }, 1000);
                sessionStorage.setItem('introShownThisSession', 'true');
            });
            // Fallback
            setTimeout(() => {
                if (introOverlay.style.display !== 'none') {
                    introOverlay.style.opacity = '0';
                    introOverlay.style.transition = 'opacity 1s ease';
                    setTimeout(() => {
                        introOverlay.style.display = 'none';
                        mainWrapper.style.opacity = '1 !important';
                    }, 1000);
                    sessionStorage.setItem('introShownThisSession', 'true');
                }
            }, 12000);
        } else {
            // No hay intro → ocultar intro y mostrar contenido inmediatamente
            introOverlay.style.display = 'none';
            mainWrapper.style.opacity = '1 !important';
        }
    </script>

    <!-- SCRIPT PARA EL PANEL DE INFO FLOTANTE -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const btnInfo = document.getElementById('btnInfo');
            const panelInfo = document.getElementById('panelInfo');
            const cerrarPanel = document.getElementById('cerrarPanel');

            if (btnInfo && panelInfo) {
                btnInfo.addEventListener('click', function () {
                    panelInfo.classList.toggle('mostrar');
                });

                // Cerrar al hacer clic fuera del panel
                document.addEventListener('click', function (e) {
                    if (!panelInfo.contains(e.target) && !btnInfo.contains(e.target)) {
                        panelInfo.classList.remove('mostrar');
                    }
                });

                // Botón cerrar
                if (cerrarPanel) {
                    cerrarPanel.addEventListener('click', function () {
                        panelInfo.classList.remove('mostrar');
                    });
                }
            }
        });
    </script>

    <script>
        document.querySelectorAll('.dropdown-item[data-vista]').forEach(item => {
            item.addEventListener('click', function (e) {
                e.preventDefault();
                const vista = this.getAttribute('data-vista');

                // Solo ejecutamos si es la vista de login
                if (vista === 'login') {
                    Swal.fire({
                        title: '<i class="bi bi-shield-lock-fill text-primary"></i> Guía de Inicio de Sesión',
                        html: `
                            <div class="text-start" style="font-size: 0.95rem; line-height: 1.5;">
                                <p><strong>¿Para qué sirve esta vista?</strong><br>
                                Es el control de acceso a la Farmacia Santa Rita. Aquí validas tu usuario para poder gestionar el sistema.</p>

                                <hr>

                                <p><strong>Instrucciones paso a paso:</strong></p>
                                <ol>
                                    <li><strong>Ingreso de datos:</strong> Escribe tu nombre de usuario y contraseña. Puedes usar el botón del ojo (<i class="bi bi-eye"></i>) para ver la clave.</li>
                                    <li><strong>Validación:</strong> Si los campos están vacíos, verás un <b>resplandor rojo</b> y un aviso de atención.</li>
                                    <li><strong>¿No recuerdas tus datos?</strong> Si ingresas información incorrecta, el sistema habilitará automáticamente el botón <b>"Recordar cuenta"</b>.</li>
                                    <li><strong>Nuevos usuarios:</strong> Si aún no tienes cuenta, usa el botón <b>"Crear cuenta"</b> para registrarte.</li>
                                </ol>

                                <div class="alert alert-warning p-2" style="font-size: 0.85rem;">
                                    <i class="bi bi-exclamation-triangle-fill"></i>
                                    <strong>Nota:</strong> Si tu cuenta fue desactivada por el administrador, verás un mensaje de "Acceso Denegado".
                                </div>
                            </div>
                        `,
                        confirmButtonText: 'Entendido',
                        confirmButtonColor: '#007bff',
                        customClass: {
                            popup: 'rounded-4 shadow-lg',
                            title: 'fw-bold'
                        },
                        width: '500px'
                    });
                } else {
                    // Mensaje temporal para las otras opciones mientras no las configuramos
                    Swal.fire({
                        title: 'Próximamente',
                        text: 'La guía para esta sección se activará pronto.',
                        confirmButtonText: 'Entendido',
                        confirmButtonColor: '#007bff'
                    });
                }
            });
        });
    </script>
    
</body>
</html>