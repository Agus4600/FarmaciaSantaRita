                            </div>
                            <div class="grupo-campo">
                                <label asp-for="NombreUsuario">Nombre de Usuario</label>
                                <input asp-for="NombreUsuario" class="form-control" id="NombreUsuario" />
                            </div>
                        </div>

                        <div class="tres-columnas">
                            <div class="grupo-campo">
                                <label asp-for="Telefono">Teléfono</label>
                                <input asp-for="Telefono" class="form-control" type="tel" id="Telefono" />
                            </div>
                            <div class="grupo-campo">
                                <label asp-for="CorreoUsuario">Correo</label>
                                <input asp-for="CorreoUsuario" class="form-control" type="email" id="CorreoUsuario" />
                            </div>
                            <div class="grupo-campo">
                                <label asp-for="Dni">DNI</label>
                                <input asp-for="Dni" class="form-control" id="Dni" />
                            </div>
                        </div>

                        <div class="tres-columnas">
