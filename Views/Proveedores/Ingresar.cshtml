@model IEnumerable<FarmaciaSantaRita.Models.Proveedor>

@{
    ViewData["Title"] = "INGRESAR PROVEEDOR";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="text-center mb-4">
            <img src="~/images/file_0000000079e461fd8636559665695d53.png"
                 alt="Farmacia Santa Rita"
                 style="width: 100%; max-height: 180px; object-fit: contain;">
        </div>

        <h3 class="text-center mb-3">Selecciona el proveedor para ingresar</h3>

        <form asp-action="IngresarProveedor" method="post">
            @Html.AntiForgeryToken()
            <div class="table-responsive mb-3" style="max-height: 300px;">
                <table class="table table-bordered text-center align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Teléfono</th>
                            <th>Correo</th>
                            <th style="width: 80px;">Seleccionar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var proveedor in Model)
                            {
                                <tr>
                                    <td>@proveedor.NombreProveedor</td>
                                    <td>@proveedor.TelefonoProveedor</td>
                                    <td>@proveedor.CorreoProveedor</td>
                                    <td>
                                        <input type="radio" name="idProveedor" class="form-check-input" value="@proveedor.Idproveedor" />
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4">No hay proveedores registrados.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="d-flex justify-content-center gap-3">
                <button type="submit" class="btn btn-primary btn-lg">Ingresar</button>
                <a asp-action="Index" class="btn btn-secondary btn-lg">Volver</a>
            </div>
        </form>

        <div id="mensajeIngreso" class="text-center mt-3">
            @if (TempData["MensajeError"] != null)
            {
                <div class="alert alert-danger">@TempData["MensajeError"]</div>
            }
        </div>
    </div>
</div>
