@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script> @* ⭐ IMPORTANTE: Añadir SweetAlert2 (si no está ya globalmente) ⭐ *@

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Elementos de la tabla y botones
            const tablaRegistro = document.getElementById("tablaRegistro");
            const tablaCuerpo = document.getElementById("tablaCuerpo");
            const buscadorInput = document.getElementById("buscador");
            const btnEliminarCuentas = document.getElementById("btnEliminarCuentas");
            const btnRestaurarCuentas = document.getElementById("btnRestaurarCuentas");

            // ⭐ NUEVO: Checkbox de "Seleccionar Todo"
            const selectAllCheckbox = document.getElementById("selectAllCheckbox");

            // Variables de Razor (mantenidas)
            const idProveedor = @Html.Raw(ViewData["IdProveedor"] ?? 0);
            const vista = "@(ViewData["vista"] as string ?? "")";

            // Elemento de Spinner de Carga
            const loadingSpinner = document.getElementById("loadingSpinner");

            // La función de mensajes simple `mostrarAdvertencia` ya no es necesaria
            // porque usaremos los modales de SweetAlert2 (Swal.fire).

            // ----------------------------------------------------
            // ⭐ LÓGICA DE SELECCIÓN GENERAL (Seleccionar Todo)
            // ----------------------------------------------------

            function actualizarSelectAllState() {
                if (!selectAllCheckbox) return;

                // Solo consideramos las filas visibles para decidir si el "Select All" debe estar marcado
                const visibleRows = Array.from(tablaCuerpo.querySelectorAll('.empleado-fila'))
                                       .filter(row => row.style.display !== 'none');

                const totalCheckboxes = visibleRows.length;
                if (totalCheckboxes === 0) {
                    selectAllCheckbox.checked = false;
                    selectAllCheckbox.indeterminate = false;
                    return;
                }

                const checkedCheckboxes = visibleRows.filter(row => row.querySelector('.select-empleado:checked'));

                if (checkedCheckboxes.length === totalCheckboxes) {
                    selectAllCheckbox.checked = true;
                    selectAllCheckbox.indeterminate = false;
                } else if (checkedCheckboxes.length > 0) {
                    selectAllCheckbox.checked = false;
                    selectAllCheckbox.indeterminate = true;
                } else {
                    selectAllCheckbox.checked = false;
                    selectAllCheckbox.indeterminate = false;
                }
            }

            // Evento para el checkbox de cabecera
            if (selectAllCheckbox) {
                selectAllCheckbox.addEventListener('change', function () {
                    const isChecked = this.checked;
                    // Solo iteramos sobre las filas visibles
                    const visibleRows = Array.from(tablaCuerpo.querySelectorAll('.empleado-fila'))
                                            .filter(row => row.style.display !== 'none');

                    visibleRows.forEach(row => {
                        const cb = row.querySelector('.select-empleado');
                        if (cb) {
                            cb.checked = isChecked;
                            row.classList.toggle('fila-seleccionada', isChecked);
                        }
                    });
                });
            }

            // Filtrado (actualiza el estado de SelectAll al filtrar)
                    function filtrarTabla() {
            const termino = buscadorInput.value.trim().toLowerCase();
            const filas = tablaCuerpo.querySelectorAll('.empleado-fila');
            filas.forEach(fila => {
                const nombreCompleto = fila.querySelector('.col-nombre-completo').textContent.trim().toLowerCase();
                const dni = fila.querySelector('.col-dni')?.textContent.trim().toLowerCase() || '';
                const debeMostrar =
                    termino === "" ||
                    nombreCompleto.includes(termino) ||
                    dni.includes(termino);
                fila.style.display = debeMostrar ? '' : 'none';
            });
            actualizarSelectAllState();
        }

            if (buscadorInput) {
                buscadorInput.addEventListener('input', filtrarTabla);
            }

            // Marcar fila al seleccionar checkbox individual (actualiza el estado de SelectAll)
            if (tablaRegistro) {
                tablaRegistro.addEventListener('change', function (e) {
                    if (e.target.classList.contains('select-empleado')) {
                        const fila = e.target.closest('.empleado-fila');
                        fila.classList.toggle('fila-seleccionada', e.target.checked);
                        actualizarSelectAllState();
                    }
                });
            }

            // Función común para eliminar filas de la tabla (y actualizar tabla vacía)
            function eliminarFilas(idsAfectados) {
                idsAfectados.forEach(id => {
                    const fila = document.querySelector(`.empleado-fila[data-id="${id}"]`);
                    if (fila) fila.remove();
                });

                if (tablaCuerpo.querySelectorAll('.empleado-fila').length === 0) {
                    tablaCuerpo.innerHTML = `<tr><td colspan="6" class="text-center text-muted">No hay cuentas de empleados registradas</td></tr>`;
                }
            }


            // =========================================================
            // ⭐ LÓGICA DE ELIMINAR CUENTAS PERMANENTEMENTE (CON SWEETALERT2)
            // =========================================================
            if (btnEliminarCuentas) {
                btnEliminarCuentas.addEventListener('click', async function () {
                    const checkboxesSeleccionados =
                        Array.from(document.querySelectorAll('.select-empleado:checked'));
                    const idsAEliminar = checkboxesSeleccionados.map(cb => parseInt(cb.value));

                    if (idsAEliminar.length === 0) {
                        await Swal.fire({
                            title: '¡Atención!',
                            text: 'Selecciona al menos una cuenta de empleado para eliminar permanentemente.',
                            confirmButtonText: 'Entendido',
                            confirmButtonColor: '#007bff'
                        });
                        return;
                    }

                    // 1. Modal de Confirmación
                    const resultadoConfirmacion = await Swal.fire({
                        title: 'Eliminación PERMANENTE',
                        html: `¿Está seguro de eliminar permanentemente ${idsAEliminar.length} cuenta(s) seleccionada(s)?<br>`,
                        showCancelButton: true,
                        confirmButtonText: 'Sí, Eliminar Permanentemente',
                        cancelButtonText: 'Cancelar',
                        confirmButtonColor: '#007bff',
                        cancelButtonColor: '#007bff'
                    });

                    if (!resultadoConfirmacion.isConfirmed) {
                        return;
                    }

                    // 2. Proceso de Eliminación AJAX
                    btnEliminarCuentas.disabled = true;
                    if (loadingSpinner) loadingSpinner.style.display = 'inline-block';

                    const data = { idsUsuarios: idsAEliminar };

                    try {
                        const response = await fetch('/RestCuentaEmpleado/EliminarPermanentementeCuentas', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(data)
                        });

                        const result = await response.json();

                        if (response.ok && result.success) {
                            // Éxito
                            eliminarFilas(idsAEliminar);
                            actualizarSelectAllState();

                            await Swal.fire({
                                icon: 'success',
                                title: '¡Eliminación Exitosa!',
                                html: result.message || 'La(s) cuenta(s) han sido eliminada(s) permanentemente.',
                                confirmButtonText: 'Entendido',
                                confirmButtonColor: '#007bff'
                            });

                        } else {
                            // Error
                            await Swal.fire({
                                icon: 'error',
                                title: 'Error al Eliminar',
                                text: result.message || 'Ocurrió un error desconocido al intentar la eliminación permanente.',
                                confirmButtonText: 'Entendido',
                                confirmButtonColor: '#007bff'
                            });
                        }
                    } catch (error) {
                        console.error('Error al realizar la solicitud de eliminación:', error);
                        await Swal.fire({
                            title: 'Error de Conexión',
                            text: 'No se pudo completar la solicitud. Verifique su conexión de red.',
                            confirmButtonText: 'Entendido',
                            confirmButtonColor: '#007bff'
                        });
                    } finally {
                        btnEliminarCuentas.disabled = false;
                        if (loadingSpinner) loadingSpinner.style.display = 'none';
                        btnEliminarCuentas.blur();
                    }
                });
            }

            // =========================================================
            // ⭐ LÓGICA DE RESTAURAR CUENTAS (CON SWEETALERT2)
            // =========================================================
            if (btnRestaurarCuentas) {
                btnRestaurarCuentas.addEventListener('click', async function () {
                    const checkboxesSeleccionados =
                        Array.from(document.querySelectorAll('.select-empleado:checked'));
                    const idsARestaurar = checkboxesSeleccionados.map(cb => parseInt(cb.value));

                    if (idsARestaurar.length === 0) {
                        await Swal.fire({
                            title: '¡Atención!',
                            text: 'Selecciona al menos una cuenta para restaurar.',
                            confirmButtonText: 'Entendido',
                            confirmButtonColor: '#007bff'
                        });
                        return;
                    }

                    // 1. Modal de Confirmación
                    const resultadoConfirmacion = await Swal.fire({
                        title: 'Restauración',
                        html: `¿Está seguro de que desea restaurar ${idsARestaurar.length} cuenta(s) seleccionada(s)?<br>`,
                        showCancelButton: true,
                        confirmButtonText: 'Sí, Restaurar',
                        cancelButtonText: 'Cancelar',
                        confirmButtonColor: '#007bff',
                        cancelButtonColor: '#007bff'
                    });

                    if (!resultadoConfirmacion.isConfirmed) {
                        return;
                    }

                    // 2. Proceso de Restauración AJAX
                    btnRestaurarCuentas.disabled = true;
                    // Opcional: Mostrar spinner si tienes uno en este botón

                    const data = { idsUsuarios: idsARestaurar };

                    try {
                        const response = await fetch('/RestCuentaEmpleado/RestaurarCuentas', {
                            method: 'POST',
                            headers: { 'Content-Type': 'application/json' },
                            body: JSON.stringify(data)
                        });

                        const result = await response.json();

                        if (response.ok && result.success) {
                            // Éxito
                            eliminarFilas(idsARestaurar); // Las quitamos de esta tabla (Papelera)
                            actualizarSelectAllState();

                            await Swal.fire({
                                icon: 'success',
                                title: '¡Cuentas Restauradas!',
                                text: result.message || 'La(s) cuenta(s) han sido restaurada(s)',
                                confirmButtonText: 'Entendido',
                                confirmButtonColor: '#007bff'
                            });

                        } else {
                            // Error
                            await Swal.fire({
                                title: 'Error al Restaurar',
                                text: result.message || 'Ocurrió un error desconocido al intentar restaurar las cuentas.',
                                confirmButtonText: 'Entendido',
                                confirmButtonColor: '#007bff'
                            });
                        }
                    } catch (error) {
                        console.error('Error al realizar la restauración:', error);
                        await Swal.fire({
                            title: 'Error de Conexión',
                            text: 'No se pudo completar la solicitud. Verifique su conexión de red.',
                            confirmButtonText: 'Entendido',
                            confirmButtonColor: '#007bff'
                        });
                    } finally {
                        btnRestaurarCuentas.disabled = false;
                        btnRestaurarCuentas.blur();
                    }
                });
            }

            // Inicializar el estado de Select All al cargar la página
            actualizarSelectAllState();

        });
    </script>
}