    <style>
        html, body {
            height: 100%;
            width: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden; /* Mantenemos para videos de fondo */
            background-color: transparent !important;
            background: transparent !important;
        }

        #video-background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100vw;
            height: 100vh;
            object-fit: cover;
            z-index: -1;
            background: transparent;
        }

        .main-wrapper {
            position: relative;
            z-index: 10;
            min-height: 100vh; /* Cambiado de height fijo a min-height */
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
            padding: 50px 15px; /* Padding lateral seguro en móviles */
            overflow-y: auto; /* Scroll vertical SIEMPRE disponible */
            overflow-x: hidden;
            scrollbar-width: none;
            -ms-overflow-style: none;
            box-sizing: border-box;
            background: transparent;
            opacity: 1 !important;
            transition: opacity 1s ease;
        }

            .main-wrapper::-webkit-scrollbar {
                display: none;
            }
        /* Contenedor universal para centrar contenido en todas las vistas */
        main {
            width: 100%;
            max-width: 1400px; /* Máximo razonable en pantallas grandes */
            padding: 0 15px;
            margin: 0 auto; /* Centrado horizontal */
        }
