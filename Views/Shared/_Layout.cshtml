            .main-wrapper {
                padding-top: 30px;
                padding-bottom: 30px;
                padding-left: 10px;
                padding-right: 10px;
            }

            main {
                padding: 0 10px;
            }
            /* Evita que los cards se vean demasiado anchos en móviles */
            .card {
                margin: 0 auto;
                max-width: 100%;
            }
        }

        @@media (max-width: 576px) {
            .main-wrapper {
                padding-top: 20px;
                padding-bottom: 20px;
            }
        }
