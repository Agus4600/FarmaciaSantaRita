@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Variables de la tabla
            const tablaRegistro = document.getElementById("tablaRegistro");
            const tablaCuerpo = document.getElementById("tablaCuerpo");
            const buscadorInput = document.getElementById("buscador");
            const btnEliminarCuentas = document.getElementById("btnEliminarCuentas");
            
            // ⭐ NUEVA VARIABLE: Checkbox de "Seleccionar Todo"
            const selectAllCheckbox = document.getElementById("selectAllCheckbox");


            // ----------------------------------------------------
            // ⭐ FUNCIÓN DE LÓGICA DE SELECCIÓN GENERAL
            // ----------------------------------------------------

            // Función para actualizar el estado del checkbox de cabecera
            function actualizarSelectAllState() {
                if (!selectAllCheckbox) return;

                const totalCheckboxes = document.querySelectorAll('.select-empleado');
                const checkedCheckboxes = document.querySelectorAll('.select-empleado:checked');
                
                // Solo actualiza si hay filas en la tabla
                if (totalCheckboxes.length > 0) {
                    selectAllCheckbox.checked = checkedCheckboxes.length === totalCheckboxes.length;
                } else {
                    selectAllCheckbox.checked = false;
                }
            }


            // ----------------------------------------------------
            // ⭐ 1. BÚSQUEDA (Sin cambios, solo validación de existencia)
            // ----------------------------------------------------
                    function filtrarTabla() {
            const termino = buscadorInput.value.trim().toLowerCase();
            const filas = tablaCuerpo.querySelectorAll('.empleado-fila');
            filas.forEach(fila => {
                const nombreCompleto = fila.querySelector('.col-nombre-completo').textContent.trim().toLowerCase();
                const dni = fila.querySelector('.col-dni')?.textContent.trim().toLowerCase() || '';
                const debeMostrar =
                    termino === "" ||
                    nombreCompleto.includes(termino) ||
                    dni.includes(termino);
                fila.style.display = debeMostrar ? '' : 'none';
            });
            actualizarSelectAllState();
        }

            if (buscadorInput) {
                buscadorInput.addEventListener('input', filtrarTabla);
            }

            // ----------------------------------------------------
            // ⭐ 2. SELECT ALL / DESELECT ALL
            // ----------------------------------------------------

            if (selectAllCheckbox) {
                selectAllCheckbox.addEventListener('change', function () {
                    const isChecked = this.checked;
                    // Solo iteramos sobre las filas visibles si la tabla está siendo filtrada
                    const rowCheckboxes = document.querySelectorAll('.select-empleado');
                    
                    rowCheckboxes.forEach(cb => {
                        cb.checked = isChecked;
                        // También actualizamos el resaltado visual en la fila
                        const fila = cb.closest('.empleado-fila');
                        if (fila) {
                            fila.classList.toggle('fila-seleccionada', isChecked);
                        }
                    });
                });
            }


            // ----------------------------------------------------
            // ⭐ 3. SELECCIÓN DE FILA INDIVIDUAL (Actualizada)
            // ----------------------------------------------------
            if (tablaRegistro) {
                tablaRegistro.addEventListener('change', function (e) {
                    if (e.target.classList.contains('select-empleado')) {
                        const fila = e.target.closest('.empleado-fila');
                        fila.classList.toggle('fila-seleccionada', e.target.checked);
                        
                        // ⭐ NEW: Actualizamos el estado del checkbox de cabecera
                        actualizarSelectAllState(); 
                    }
                });
            }

            // ----------------------------------------------------
            // ⭐ 4. ELIMINAR CUENTAS (SweetAlert2 - Mantenida)
            // ----------------------------------------------------
            if (btnEliminarCuentas) {

                btnEliminarCuentas.addEventListener('click', async function () {

                    const checkboxesSeleccionados =
                        Array.from(document.querySelectorAll('.select-empleado:checked'));

                    const idsAEliminar = checkboxesSeleccionados.map(cb => parseInt(cb.value));

                    if (idsAEliminar.length === 0) {
                        await Swal.fire({
                            title: '¡Atención!',
                            text: 'Selecciona al menos una cuenta para eliminar.',
                            confirmButtonText: 'Entendido',
                            confirmButtonColor: '#007bff'
                        });
                        return;
                    }

                    // ⭐ MODAL DE CONFIRMACIÓN (SweetAlert2)
                    const resultadoConfirmacion = await Swal.fire({
                        title: 'Confirmación de Eliminación',
                        html: `¿Está seguro de que desea eliminar <b>${idsAEliminar.length} cuenta(s)</b> seleccionada(s)?`,
                        showCancelButton: true,
                        confirmButtonText: 'Sí, eliminar',
                        cancelButtonText: 'Cancelar',
                        confirmButtonColor: '#007bff',
                        cancelButtonColor: '#007bff'
                    });

                    if (!resultadoConfirmacion.isConfirmed) {
                        return;
                    }

                    // Proceder con la eliminación
                    btnEliminarCuentas.disabled = true;

                    const data = { idsUsuarios: idsAEliminar };

                    try {
                        const response = await fetch('/CuentaEmpleado/EliminarCuentas', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify(data)
                        });

                        const result = await response.json();

                        if (response.ok && result.success) {
                            // 1. Quitar las filas de la tabla (lado del cliente)
                            idsAEliminar.forEach(id => {
                                const fila = document.querySelector(`.empleado-fila[data-id="${id}"]`);
                                if (fila) fila.remove();
                            });

                            // 2. Verificar y añadir la fila de "No hay datos"
                            if (tablaCuerpo.querySelectorAll('.empleado-fila').length === 0) {
                                tablaCuerpo.innerHTML = '';
                                const filaVacia = document.createElement('tr');
                                filaVacia.innerHTML = `<td colspan="6" class="text-center text-muted">No hay cuentas de empleados registradas</td>`;
                                tablaCuerpo.appendChild(filaVacia);
                            }
                            
                            // 3. ⭐ NEW: Actualizar el estado del checkbox de cabecera después de la eliminación
                            actualizarSelectAllState();

                            // Notificación de éxito (SweetAlert2)
                            await Swal.fire({
                                icon: 'success',
                                title: '¡Cuentas Eliminadas!',
                                text: result.message || 'La(s) cuenta(s) ha(n) sido eliminada(s) con éxito.',
                                confirmButtonText: 'Entendido',
                                confirmButtonColor: '#007bff'
                            });

                        } else {
                            // Notificación de error (SweetAlert2)
                            await Swal.fire({
                                title: 'Error al Eliminar',
                                text: result.message || 'Ocurrió un error desconocido al intentar eliminar las cuentas.',
                                confirmButtonText: 'Entendido',
                                confirmButtonColor: '#007bff'
                            });
                        }

                    } catch (error) {
                        console.error('Error al realizar la solicitud:', error);
                        // Notificación de error de conexión (SweetAlert2)
                        await Swal.fire({
                            title: 'Error de Conexión',
                            text: 'No se pudo completar la solicitud. Verifique su conexión de red.',
                            confirmButtonText: 'Entendido',
                            confirmButtonColor: '#007bff'
                        });
                    } finally {
                        btnEliminarCuentas.disabled = false;
                    }
                });
            }


            // ----------------------------------------------------
            // ⭐ 5. EVENTO RESTAURAR CUENTAS (Mantenida)
            // ----------------------------------------------------
            const btnRestaurarCuentas = document.getElementById("btnRestaurarCuentas"); 
            if (btnRestaurarCuentas && btnRestaurarCuentas.tagName === 'BUTTON') {
                btnRestaurarCuentas.addEventListener('click', function() {
                    const idProveedor = @Html.Raw(Json.Serialize(ViewBag.idProveedor ?? 0));
                    const vista = "@Html.Raw(ViewBag.vista ?? string.Empty)";
                    const urlRestaurar = `/RestCuentaEmpleado/Index?idProveedor=${idProveedor}&vista=${vista}`;
                    window.location.href = urlRestaurar;
                });
            }

            // Inicializar el estado del Select All al cargar la página (opcional)
            actualizarSelectAllState();

        });
    </script>
