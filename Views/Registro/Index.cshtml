@model FarmaciaSantaRita.Models.Usuario
@{
    ViewData["Title"] = "Registro de Usuario";
}

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    /* CENTRADO PERFECTO Y SIN SCROLL */
    html, body {
        height: 100%;
        margin: 0;
        padding: 0;
        overflow: hidden;
        background-color: #f4f7f6;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .main-wrapper {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
        width: 100%;
        padding: 20px;
        box-sizing: border-box;
    }

    .card-custom {
        width: 95%;
        max-width: 1100px;
        background-color: white;
        border-radius: 25px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
        padding: 30px 40px;
        max-height: 95vh;
        overflow-y: auto;
        box-sizing: border-box;
    }

    .logo-container {
        text-align: center;
        margin-bottom: 20px;
    }

    .logo-img {
        max-height: 140px;
        width: auto;
        object-fit: contain;
    }

    .custom-groupbox {
        border: 2px solid #007bff;
        border-radius: 15px;
        padding: 12px 20px;
        margin-bottom: 20px;
        position: relative;
    }

        .custom-groupbox legend {
            float: none;
            width: auto;
            padding: 0 15px;
            margin: 0 auto;
            font-size: 1.1rem;
            font-weight: bold;
            color: #007bff;
            background-color: white;
            text-align: center;
        }

    .form-label {
        font-weight: 600;
        font-size: 0.85rem;
        margin-bottom: 3px;
        color: #333;
    }

    .form-control-custom {
        border-radius: 10px;
        border: 1px solid #ced4da;
        padding: 7px 12px;
        font-size: 0.9rem;
        width: 100%;
        transition: all 0.2s ease;
    }

    /* RESPLANDOR ROJO EN CAMPOS INVÁLIDOS (incluido Dirección personalizada) */
    #registroForm.show-errors .form-control-custom:invalid,
    #registroForm.show-errors #Direccion.invalid-comma {
        border-color: #ff0000 !important;
        box-shadow: 0 0 10px 2px rgba(255, 0, 0, 0.7) !important;
    }

    .form-control-custom:focus,
    .password-wrapper:focus-within,
    .custom-groupbox.rol-group input:focus {
        outline: none !important;
    }

    .password-wrapper {
        display: flex;
        border: 1px solid #ced4da;
        border-radius: 10px;
        overflow: hidden;
        background: white;
    }

    #registroForm.show-errors .password-wrapper:has(input:invalid) {
        border-color: #ff0000 !important;
        box-shadow: 0 0 10px 2px rgba(255, 0, 0, 0.7) !important;
    }

    .password-wrapper input {
        border: none !important;
        flex-grow: 1;
        padding: 7px 12px;
    }

    .btn-toggle-view {
        background: #f8f9fa;
        border: none;
        border-left: 1px solid #ced4da;
        padding: 0 12px;
        color: #6c757d;
        cursor: pointer;
    }

    /* RESPLANDOR ROJO PARA EL GRUPO DE ROL */
    .custom-groupbox.rol-group {
        transition: all 0.3s ease;
    }

    #registroForm.show-errors .custom-groupbox.rol-group:has(input:required:not(:checked)) {
        border-color: #ff0000 !important;
        box-shadow: 0 0 10px 2px rgba(255, 0, 0, 0.7) !important;
    }

    .btn-action-custom {
        background-color: #007bff;
        color: white !important;
        border-radius: 12px;
        padding: 10px;
        font-weight: bold;
        border: none;
        width: 100%;
        height: 45px;
        display: flex;
        align-items: center;
        justify-content: center;
        text-decoration: none !important;
        transition: background-color 0.2s, transform 0.1s;
        min-width: 180px;
    }

        .btn-action-custom:hover {
            background-color: #0056b3;
            transform: translateY(-1px);
        }

    .buttons-row {
        margin-top: 30px;
    }
</style>

<div class="main-wrapper">
    <div class="card-custom">
        <div class="logo-container">
            <img src="~/images/file_0000000079e461fd8636559665695d53.png" alt="Logo Farmacia Santa Rita" class="logo-img">
        </div>
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" style="border-radius: 15px; margin-bottom: 20px;">
                <i class="bi bi-exclamation-triangle-fill"></i> @ViewBag.Error
            </div>
        }
        <form asp-action="Index" method="post" id="registroForm" autocomplete="off" novalidate>
            <fieldset class="custom-groupbox">
                <legend>Datos Personales</legend>
                <div class="row g-3">
                    <div class="col-md-3">
                        <label class="form-label">Nombre</label>
                        <input asp-for="Nombre" id="Nombre" class="form-control-custom" required />
                        <span id="err-Nombre" class="error-label text-danger" style="font-size: 11px;"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Apellido</label>
                        <input asp-for="Apellido" id="Apellido" class="form-control-custom" required />
                        <span id="err-Apellido" class="error-label text-danger" style="font-size: 11px;"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">DNI</label>
                        <input asp-for="Dni" id="Dni" class="form-control-custom" maxlength="10" required onkeypress="return soloNumeros(event)" />
                        <span id="err-Dni" class="error-label text-danger" style="font-size: 11px;"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Teléfono</label>
                        <input asp-for="Telefono" id="Telefono" class="form-control-custom" required />
                        <span id="err-Telefono" class="error-label text-danger" style="font-size: 11px;"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Dirección</label>
                        <input asp-for="Direccion" id="Direccion" class="form-control-custom" required />
                        <span id="err-Direccion" class="error-label text-danger" style="font-size: 11px;"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Fecha Nacimiento</label>
                        <input asp-for="FechaNacimiento" id="FechaNacimiento" type="date" class="form-control-custom" required />
                        <span id="err-FechaNacimiento" class="error-label text-danger" style="font-size: 11px;"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Fecha de Ingreso</label>
                        <input asp-for="FechaIngreso" id="FechaIngreso" type="date" class="form-control-custom" required />
                        <span id="err-FechaIngreso" class="error-label text-danger" style="font-size: 11px;"></span>
                    </div>

                    <div class="col-md-3">
                        <div class="custom-groupbox m-0" style="padding: 10px 20px; border-width: 1px;">
                            <legend style="font-size: 0.9rem !important; padding: 0 10px;">Rol</legend>
                            <div class="d-flex justify-content-around align-items-center">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Rol" value="Empleado/a" id="rolEmpleado" checked />
                                    <label class="form-check-label" for="rolEmpleado">Empleado/a</label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="Rol" value="Jefe/a" id="rolJefe" />
                                    <label class="form-check-label" for="rolJefe">Jefe/a</label>
                                </div>
                            </div>
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset class="custom-groupbox">
                <legend>Cuenta y Seguridad</legend>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label">Usuario</label>
                        <input asp-for="NombreUsuario" id="NombreUsuario" class="form-control-custom" required autocomplete="off" />
                        <span id="err-NombreUsuario" class="error-label text-danger" style="font-size: 11px;"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Correo Electrónico</label>
                        <input asp-for="CorreoUsuario" id="CorreoUsuario" type="email" class="form-control-custom" required autocomplete="off" />
                        <span id="err-CorreoUsuario" class="error-label text-danger" style="font-size: 11px;"></span>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Contraseña</label>
                        <div class="password-wrapper">
                            <input id="passInput" asp-for="ContraseñaPlana" type="password" class="form-control-custom" required autocomplete="new-password" />
                            <button type="button" class="btn-toggle-view" onclick="togglePass()">
                                <i id="passIcon" class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span id="err-passInput" class="error-label text-danger" style="font-size: 11px;"></span>
                    </div>
                </div>
            </fieldset>

            <div class="row justify-content-center buttons-row">
                <div class="col-md-6 d-flex gap-4">
                    <button type="button" onclick="validarYEnviar()" class="btn-action-custom">Crear Cuenta</button>
                    <a asp-controller="Login" asp-action="Index" class="btn-action-custom">Volver</a>
                </div>
            </div>
        </form>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    // Limpiar errores (solo resplandor, NO texto)
    function limpiarErrores() {
        const form = document.getElementById('registroForm');
        form.classList.remove('show-errors');
        document.querySelectorAll('.form-control-custom, .password-wrapper, .custom-groupbox.rol-group').forEach(el => {
            el.classList.remove('invalid');
        });
        // NO borramos los textos de error aquí (se mantienen hasta que el campo sea válido)
    }

    // Mostrar error debajo del campo + resplandor rojo
    function mostrarError(idInput, mensaje) {
        const span = document.getElementById('err-' + idInput);
        const input = document.getElementById(idInput);
        const wrapper = idInput === 'passInput' ? document.querySelector('.password-wrapper') : input;
        const group = idInput === 'rolEmpleado' || idInput === 'rolJefe' ? document.querySelector('.custom-groupbox.rol-group') : null;

        // Mostrar texto debajo del campo (se mantiene hasta que sea válido)
        if (span) span.innerText = mensaje;

        // Forzar resplandor rojo
        if (input) input.classList.add('invalid');
        if (wrapper) wrapper.classList.add('invalid');
        if (group) group.classList.add('invalid');
    }

    // Solo números en DNI
    function soloNumeros(e) {
        let key = e.keyCode || e.which;
        if (key < 48 || key > 57) return false;
    }

    // Toggle contraseña
    function togglePass() {
        const input = document.getElementById('passInput');
        const icon = document.getElementById('passIcon');
        if (input.type === "password") {
            input.type = "text";
            icon.className = "bi bi-eye-slash";
        } else {
            input.type = "password";
            icon.className = "bi bi-eye";
        }
    }

    // Eliminar SOLO el resplandor rojo al empezar a escribir (el texto se mantiene)
    document.addEventListener('input', function(e) {
        const target = e.target;
        if (target.classList.contains('form-control-custom') || target.parentElement.classList.contains('password-wrapper')) {
            target.classList.remove('invalid');
            if (target.parentElement.classList.contains('password-wrapper')) {
                target.parentElement.classList.remove('invalid');
            }
            // NO borramos el texto del span aquí → se mantiene hasta que el campo sea válido
        }
    });

    // Validar y enviar
    function validarYEnviar() {
        limpiarErrores();

        const form = document.getElementById('registroForm');
        form.classList.add('show-errors'); // Activa TODOS los resplandores del CSS

        // Capturar valores
        const nombre = document.getElementById("Nombre").value.trim();
        const apellido = document.getElementById("Apellido").value.trim();
        const dni = document.getElementById("Dni").value.trim();
        const telefono = document.getElementById("Telefono").value.trim();
        const direccion = document.getElementById("Direccion").value.trim();
        const fechaNac = document.getElementById("FechaNacimiento").value.trim();
        const fechaIngreso = document.getElementById("FechaIngreso").value.trim();
        const usuario = document.getElementById("NombreUsuario").value.trim();
        const correo = document.getElementById("CorreoUsuario").value.trim();
        const pass = document.getElementById("passInput").value.trim();
        const rolSeleccionado = document.querySelector('input[name="Rol"]:checked');

        let hayError = false;

        if (nombre === "") {
            mostrarError("Nombre", "El nombre es obligatorio");
            hayError = true;
        }
        if (apellido === "") {
            mostrarError("Apellido", "El apellido es obligatorio");
            hayError = true;
        }
        if (dni.length < 7 || dni.length > 8) {
            mostrarError("Dni", "El DNI debe tener 7 u 8 números");
            hayError = true;
        }
        if (telefono === "") {
            mostrarError("Telefono", "El teléfono es obligatorio");
            hayError = true;
        }
        if (!direccion.includes(',')) {
            document.getElementById("Direccion").classList.add("invalid-comma");
            mostrarError("Direccion", "Especificarse la dirección (ej: Calle 123, Ciudad)");
            hayError = true;
        }

        if (fechaIngreso === "") {
            mostrarError("FechaIngreso", "La fecha de ingreso es obligatoria");
            hayError = true;
        }



        if (fechaNac === "") {
            mostrarError("FechaNacimiento", "La f.nacimiento es obligatoria");
            hayError = true;
        }
        if (usuario === "") {
            mostrarError("NombreUsuario", "El usuario es obligatorio");
            hayError = true;
        }
        const regexCorreo = /^[a-zA-Z0-9._%+-]+@@(gmail|hotmail|outlook)\.com$/i;
        if (correo === "") {
            mostrarError("CorreoUsuario", "El correo es obligatorio");
            hayError = true;
        } else if (!regexCorreo.test(correo)) {
            mostrarError("CorreoUsuario", "El correo debe tener @@ seguido de gmail.com, hotmail.com o outlook.com");
            hayError = true;
        }
        if (pass.length < 6) {
            mostrarError("passInput", "La contraseña debe tener mínimo 6 caracteres");
            hayError = true;
        }
        if (!rolSeleccionado) {
            document.querySelector('.custom-groupbox.rol-group').classList.add('invalid');
            mostrarError("rolEmpleado", "Debe seleccionar un rol (Empleado/a o Jefe/a)");
            hayError = true;
        }

        if (hayError) {
            return;
        }

        // Todo OK → Confirmación
        Swal.fire({
            title: '¿Confirmar Registro?',
            text: "Los datos son correctos.",
            showCancelButton: true,
            confirmButtonColor: '#007bff',
            cancelButtonColor: '#007bff',
            confirmButtonText: 'Sí, registrar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                form.submit();
            }
        });
    }
</script>