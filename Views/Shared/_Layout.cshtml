            position: fixed;
            bottom: 25px;
            left: 25px;
            z-index: 1050;
        }

        .btn-info-flotante {
            width: 75px;
            height: 75px;
            border-radius: 50%;
            background-color: #007bff;
            color: white;
            border: none;
            font-size: 36px;
            cursor: pointer;
            box-shadow: 0 6px 15px rgba(0,0,0,0.3);
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .btn-info-flotante:hover {
                background-color: #0056b3;
                transform: scale(1.1);
            }

        .panel-info {
            position: absolute;
            bottom: 90px;
            left: 0;
            width: 320px;
            background: white;
            border-radius: 12px;
            box-shadow: 0 10px 35px rgba(0,0,0,0.3);
            padding: 20px;
            display: none;
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.4s ease;
        }

            .panel-info.mostrar {
                display: block;
                opacity: 1;
                transform: translateY(0);
            }

            .panel-info h5 {
                margin: 0 0 18px;
                color: #007bff;
                text-align: center;
                font-weight: 600;
            }

            .panel-info ul {
                list-style: none;
                padding: 0;
                margin: 0;
            }

            .panel-info li {
                margin: 14px 0;
                font-size: 15px;
            }

